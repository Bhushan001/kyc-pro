# =============================================================================
# Kyc-Pro Platform Development Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed
# Run: cp env.example .env
# Or use the setup script: ./setup-env.sh

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
POSTGRES_DB=ekyc_platform
POSTGRES_USER=saas_user
POSTGRES_PASSWORD=saas_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Connection URL (for applications)
DATABASE_URL=jdbc:postgresql://localhost:5432/ekyc_platform
DATABASE_USERNAME=saas_user
DATABASE_PASSWORD=saas_password

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================

# Keycloak Admin Settings
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Keycloak Database Settings
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak
KC_DB_USERNAME=saas_user
KC_DB_PASSWORD=saas_password

# Keycloak Server Settings
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false
KC_HTTP_ENABLED=true
KC_HEALTH_ENABLED=true

# Keycloak Application Settings
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=ekyc-platform
KEYCLOAK_RESOURCE=ekyc-platform-client
KEYCLOAK_PUBLIC_CLIENT=true
KEYCLOAK_PRINCIPAL_ATTRIBUTE=preferred_username

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=mySuperSecretKeyWhichShouldBeOverriddenInProduction
JWT_EXPIRATION=86400

# =============================================================================
# SERVICE PORTS
# =============================================================================

# Infrastructure Services
POSTGRES_PORT=5432
KEYCLOAK_PORT=8080

# Microservices (for local development)
EUREKA_SERVER_PORT=8761
API_GATEWAY_PORT=8086
AUTH_SERVICE_PORT=8081
TENANT_SERVICE_PORT=8082
USER_SERVICE_PORT=8083
MODULE_SERVICE_PORT=8084
SUBSCRIPTION_SERVICE_PORT=8085

# =============================================================================
# FRONTEND PORTS
# =============================================================================

# Angular Development Servers
PARENT_PORTAL_PORT=4200
HUB_PORTAL_PORT=4201
CONSOLE_PORTAL_PORT=4202
WORKSPACE_PORTAL_PORT=4203

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Spring Profiles
SPRING_PROFILES_ACTIVE=dev

# Logging Level
LOGGING_LEVEL=INFO

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4201,http://localhost:4202,http://localhost:4203

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Password Policy
MIN_PASSWORD_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SPECIAL_CHARS=false

# Session Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_SOCIAL_LOGIN=false
FEATURE_ANALYTICS=false

# =============================================================================
# EXTERNAL SERVICES (for future use)
# =============================================================================

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ekyc.com

# File Storage (AWS S3)
AWS_S3_BUCKET=ekyc-platform-dev
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Payment Gateway (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Application Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_ACTUATOR=true

# Log Aggregation
LOG_LEVEL=INFO
LOG_FORMAT=JSON

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Cache (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL_FROM=noreply@ekyc.com

# Push Notifications (for future use)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable Development Tools
ENABLE_SWAGGER=true
ENABLE_H2_CONSOLE=false
ENABLE_DEV_TOOLS=true

# Debug Settings
DEBUG_MODE=true
ENABLE_SQL_LOGGING=false
ENABLE_REQUEST_LOGGING=true 